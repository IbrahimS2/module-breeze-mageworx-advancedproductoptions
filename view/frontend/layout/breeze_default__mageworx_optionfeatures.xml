<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="product" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="optionFeatures" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_OptionFeatures/js/catalog/product/features</item>
                                <item name="import" xsi:type="array">
                                    <item name="dependencies" xsi:type="string">
                                        Swissup_BreezeMageworxAdvancedproductoptions/js/optionfeatures/features-dependencies
                                    </item>
                                </item>
                            </item>
                            <item name="optionFeaturesIsDefault" xsi:type="string">MageWorx_OptionFeatures/js/catalog/product/isDefault</item>
                            <item name="mwImageReplacer" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_OptionFeatures/js/swatches/imageReplacer</item>
                                <item name="import" xsi:type="array">
                                    <item name="dependencies" xsi:type="string">Swissup_BreezeMageworxAdvancedproductoptions/js/optionfeatures/imageReplacer-dependencies</item>
                                </item>
                            </item>
                            <item name="mwImageReplacer_register" xsi:type="string">
                                Swissup_BreezeMageworxAdvancedproductoptions/js/optionfeatures/imageReplacer-register
                            </item>

                            <item name="optionAdditionalImages" xsi:type="string">
                                MageWorx_OptionFeatures/js/swatches/additional
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
