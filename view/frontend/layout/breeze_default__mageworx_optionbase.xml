    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="product" xsi:type="array">
                        <item name="active" xsi:type="boolean">true</item>
                        <item name="items" xsi:type="array">
                            <item name="optionBase_dependencies" xsi:type="string">
                                Swissup_BreezeMageworxAdvancedproductoptions/js/optionbase/base-dependencies
                            </item>
                            <item name="optionBase_component" xsi:type="string">
                                MageWorx_OptionBase/js/catalog/product/base
                            </item>
                            <item name="optionBase_mount" xsi:type="string">
                                Swissup_BreezeMageworxAdvancedproductoptions/js/optionbase/base-mount
                            </item>

                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
